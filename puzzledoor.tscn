[sub_resource type="GDScript" id="GDScript_umen6"]
script/source = "extends Area2D

@export var normal_tex: Texture2D
@export var hover_tex: Texture2D
@onready var sprite: Sprite2D = $Puzzledoor
@onready var popup_label: Label = $\"../PopupLabel\" # ✅ ปรับ path ให้ถูก

func _ready() -> void:
	if normal_tex:
		sprite.texture = normal_tex
	mouse_entered.connect(_on_mouse_entered)
	mouse_exited.connect(_on_mouse_exited)

func _on_mouse_entered() -> void:
	if hover_tex:
		sprite.texture = hover_tex

func _on_mouse_exited() -> void:
	if normal_tex:
		sprite.texture = normal_tex


func show_popup(text: String):
	if popup_label:
		popup_label.text = text
		popup_label.add_theme_color_override(\"font_color\", Color(\"RED\"))
		popup_label.visible = true
		await get_tree().create_timer(2.0).timeout
		popup_label.visible = false
"

